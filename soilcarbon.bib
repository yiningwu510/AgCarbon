	number = {2},
	urldate = {2022-08-30},
	journal = {Computers and Electronics in Agriculture},
	author = {Zhai, Yushun and Thomasson, J. Alex and Boggess, Julian E. and Sui, Ruixiu},
	month = dec,
	year = {2006},
	keywords = {Committee machine, Neural network, Reflectance, Remote sensing, Soil texture, Specialist committee machine, Spectral radiance},
	pages = {53--68},
	file = {ScienceDirect Full Text PDF:/Users/yiningwu/Zotero/storage/5F3AXJCM/Zhai et al. - 2006 - Soil texture classification with artificial neural.pdf:application/pdf;ScienceDirect Snapshot:files/1268/S0168169906000834.html:text/html;Soil texture classification with artificial neural networks operating on remote sensing data:files/3161/j.compag.2006.08.001.pdf.pdf:application/pdf},
}

