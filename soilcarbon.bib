@article{domkeInventorybasedEstimatesSoil2017,
  title = {Toward Inventory-Based Estimates of Soil Organic Carbon in Forests of the {{United States}}},
  author = {Domke, G. M. and Perry, C. H. and Walters, B. F. and Nave, L. E. and Woodall, C. W. and Swanston, C. W.},
  date = {2017},
  journaltitle = {Ecological Applications},
