@article{crystal-ornelasSoilOrganicCarbon2021,
	title = {Soil organic carbon is affected by organic amendments, conservation tillage, and cover cropping in organic farming systems: {A} meta-analysis},
	volume = {312},
	issn = {0167-8809},
	shorttitle = {Soil organic carbon is affected by organic amendments, conservation tillage, and cover cropping in organic farming systems},
