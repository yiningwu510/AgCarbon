  title = {Impacts of Agricultural Management Practices on {{C}} Sequestration in Forest-Derived Soils of the Eastern {{Corn Belt}}},
  author = {Dick, W. A and Blevins, R. L and Frye, W. W and Peters, S. E and Christenson, D. R and Pierce, F. J and Vitosh, M. L},
