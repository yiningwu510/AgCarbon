	note = {97 citations (Crossref) [2023-04-11]},
	keywords = {Soil carbon sequestration, CO2 fertilization effect, Global warming, Greenhouse effect, Soil carbon dynamics},
	pages = {113--127},
	file = {Full Text PDF:files/1313/Lal - 2008 - Soil carbon stocks under present and future climat.pdf:application/pdf;Soil carbon stocks under present and future climate with specific reference to European ecoregions:files/1312/s10705-007-9147-x.pdf.pdf:application/pdf},
