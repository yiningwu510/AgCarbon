	keywords = {Simulation, Agricultural management, Carbon sequestration, APSIM, Climate, Soil nitrogen stress, Soil water stress},
	pages = {1529--1544},
	file = {Modeling long-term soil carbon dynamics and sequestration potential in semi-arid agro-ecosystems:files/1684/j.agrformet.2011.06.011.pdf.pdf:application/pdf;ScienceDirect Snapshot:files/1685/S0168192311002048.html:text/html},
}

@article{necpalovaUnderstandingDayCentModel2015,
