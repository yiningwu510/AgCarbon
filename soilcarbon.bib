	author = {Wills, Skye and Seybold, Cathy and Chiaretti, Joe and Sequeira, Cleiton and West, Larry},
	year = {2013},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.2136/sssaj2012.0168},
	pages = {1711--1723},
	file = {Full Text PDF:files/313/Wills et al. - 2013 - Quantifying Tacit Knowledge about Soil Organic Car.pdf:application/pdf;Quantifying Tacit Knowledge about Soil Organic Carbon Stocks Using Soil Taxa and Official Soil Series Descriptions:files/314/sssaj2012.0168.pdf.pdf:application/pdf;Snapshot:files/312/sssaj2012.html:text/html},
