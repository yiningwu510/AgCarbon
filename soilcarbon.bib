	keywords = {agriculture, ecosystem modeling, global change, greenhouse gas mitigation},
	pages = {44--50},
	file = {Global scale DAYCENT model analysis of greenhouse gas emissions and mitigation strategies for cropped soils:files/1694/j.gloplacha.2008.12.006.pdf.pdf:application/pdf;ScienceDirect Snapshot:files/1695/S0921818108002075.html:text/html},
