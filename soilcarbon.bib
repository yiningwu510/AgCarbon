@article{zhouHowDoesUncertainty2023,
  title = {How Does Uncertainty of Soil Organic Carbon Stock Affect the Calculation of Carbon Budgets and Soil Carbon Credits for Croplands in the {{U}}.{{S}}. {{Midwest}}?},
  author = {Zhou, Wang and Guan, Kaiyu and Peng, Bin and Margenot, Andrew and Lee, DoKyoung and Tang, Jinyun and Jin, Zhenong and Grant, Robert and DeLucia, Evan and Qin, Ziqi and Wander, Michelle M and Wang, Sheng},
  date = {2023-01-01},
  journaltitle = {Geoderma},
