@article{zhongScaleEffectsGeographical2011,
  title = {Scale {{Effects}} of {{Geographical Soil Datasets}} on {{Soil Carbon Estimation}} in {{Louisiana}}, {{USA}}: {{A Comparison}} of {{STATSGO}} and {{SSURGO}}},
  shorttitle = {Scale {{Effects}} of {{Geographical Soil Datasets}} on {{Soil Carbon Estimation}} in {{Louisiana}}, {{USA}}},
