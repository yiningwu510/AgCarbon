	keywords = {causal effects, causal modeling, GBM, inverse probability of treatment weighting, twang},
	pages = {3388--3414},
	file = {A tutorial on propensity score estimation for multiple treatments using generalized boosted models:files/1626/sim.5753.pdf.pdf:application/pdf;Full Text PDF:files/1627/McCaffrey et al. - 2013 - A tutorial on propensity score estimation for mult.pdf:application/pdf;Snapshot:files/1628/sim.html:text/html},
