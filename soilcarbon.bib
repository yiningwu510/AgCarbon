	keywords = {Conservation, Land use planning, Non-market valuation, Open space, Sprawl},
	pages = {592--602},
	file = {Economics at the fringe\: Non-market valuation studies and their role in land use plans in the United States:files/470/spencerbanzhaf2010.pdf.pdf:application/pdf;ScienceDirect Snapshot:files/469/S0301479709003442.html:text/html},
